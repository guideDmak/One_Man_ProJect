<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The_Bekery</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/The_Bekery.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site-bakery.css" asp-append-version="true" />

</head>

<body>
    <header class="site-header">
        <div class="container header-wrap">
            <div class="brand">
                <span class="brand-logo">🍞</span>
                <span class="brand-name">The Bakery</span>
            </div>

            <nav class="site-nav">
                <a class="nav-item" asp-controller="Home" asp-action="Index">Home</a>
                <a class="nav-item" asp-controller="Shop" asp-action="Index">Shop</a>
                <a class="nav-item" asp-controller="About" asp-action="Index">About</a>
                <a class="nav-item" asp-controller="Contact" asp-action="Index">Contact</a>
            </nav>

            <div class="site-actions">
                <a href="#" class="icon-btn">🔎</a>
                <a href="#" class="icon-btn">♡</a>
                <a href="#" class="icon-btn">🛒</a>
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - The_Bekery - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>