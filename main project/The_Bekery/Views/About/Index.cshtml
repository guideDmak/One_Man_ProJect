@{
    ViewData["Title"] = "About";
}

<section class="section">
    <div class="container">
        <h1 class="mb-2">About The Bakery</h1>
        <p class="text-muted mb-4">
            We bake daily in small batches and focus on classic recipes with premium ingredients.
        </p>

        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <h4 class="mb-2">What we focus on</h4>
                <ul class="mb-3">
                    <li>Fresh dough prepared every morning</li>
                    <li>Natural fermentation for better flavor</li>
                    <li>Consistent quality from oven to shelf</li>
                </ul>

                <a class="btn btn-primary" asp-area="" asp-controller="Contact" asp-action="Index">Contact Us</a>
            </div>
        </div>
    </div>
</section>
